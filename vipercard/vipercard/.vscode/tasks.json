{
    /* See https://go.microsoft.com/fwlink/?LinkId=733558 
    for the documentation about the tasks.json format
    these are in group build, they save any unsaved changes.

    Note: to get the $gcc problem matcher you should install the
    c/c++ vscode extension */
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "type": "npm",
            "script": "start",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build"
        },
        {
            "type": "npm",
            "script": "autoimportmodules",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "npm",
            "script": "prettierexceptlongimports",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "npm",
            "script": "addassertmarkers",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "npm",
            "script": "findmissingcomments",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
    ]
}